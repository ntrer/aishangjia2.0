<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_below="@+id/coustomer_info"
    android:background="@drawable/linear_border2"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_height="@dimen/dp_89"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/goumai_info"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/goumai_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#333"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="商户名称"
            />
    </LinearLayout>


    <View
        android:id="@+id/line3"
        android:layout_below="@id/goumai_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E9EDF5"
        />

    <LinearLayout
        android:layout_below="@+id/line3"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:id="@+id/activity_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#333"
            android:text="购买件数"
            />

        <TextView
            android:id="@+id/chengjiaoliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#333"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="总金额"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/line3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:id="@+id/activity_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#999"
            android:gravity="right"
            android:text="5件"
            />

        <TextView
            android:id="@+id/chengjiaoliang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#999"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="10元"
            />

    </LinearLayout>


</RelativeLayout>