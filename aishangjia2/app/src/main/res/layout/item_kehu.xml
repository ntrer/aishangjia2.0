<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_w"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:id="@+id/dingjin_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/goutong_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="最近沟通时间: "
            />

        <TextView
            android:id="@+id/goutong_time_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2018-10-30  17：00：00"
            />


        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@mipmap/right_arrow"
            />


    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/dingjin_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#E9EDF5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />

    <ImageView
        android:id="@+id/yituidan"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentRight="true"
        android:src="@mipmap/yingtuidan_dingjin"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/yishiyong"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentRight="true"
        android:src="@mipmap/yishiyong"
        android:visibility="gone"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/line"
        android:id="@+id/dingjin_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dingjin_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/dingjin_pic"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dingjin_pic2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/kehu_pic2"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dingjin_pic3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/kehu_pic3"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_50"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_16"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:id="@+id/sex1"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@+id/people"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/nan"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/sex2"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@+id/people"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/nv"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/people"
                android:textColor="#999"
                android:text="参加活动次数："
                />

            <TextView
                android:id="@+id/activity_time_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/people"
                android:layout_toRightOf="@id/activity_time"
                android:textColor="#999"
                />


            <TextView
                android:id="@+id/genjin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/activity_time"
                android:textColor="#999"
                android:text="跟进条数："
                />

            <TextView
                android:id="@+id/genjin_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/activity_time_count"
                android:layout_toRightOf="@id/genjin_count"
                android:textColor="#999"
                />



            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:layout_toRightOf="@+id/people"
                android:layout_marginBottom="3dp"
                android:textColor="@color/md_black_1000"
                />

            <TextView
                android:id="@+id/pay_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/phone"
               android:layout_alignRight="@+id/phone"
                android:textColor="#999"
                />

            <TextView
                android:id="@+id/pay_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/pay_count_text"
                android:layout_alignRight="@+id/phone"
                android:textColor="#999"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/pay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/phone"
                android:layout_toLeftOf="@id/pay_money_text"
                android:textColor="#999"
                android:text="成交总比数："
                />


            <TextView
                android:id="@+id/pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/pay_count"
                android:layout_toLeftOf="@id/pay_money_text"
                android:textColor="#999"
                android:text="成交总金额："
                />


        </RelativeLayout>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#E9EDF5"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />
</RelativeLayout>