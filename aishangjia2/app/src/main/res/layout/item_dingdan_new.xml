<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#E9EDF5"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/diingdan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colortext"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2018 12-12 11:23:34"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/diingdan_time"
        android:layout_margin="@dimen/dp_8"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/linear_border2"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/dingdan_title"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dingdan_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textColor="#1F84E9"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="200-"
                />

            <TextView
                android:id="@+id/dingdan_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textColor="#1F84E9"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="你好"
                />

            <TextView
                android:id="@+id/dingdan_title_bianhuao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textColor="#7B7B7C"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_9"
                android:text="(89757) X"
                />

            <TextView
                android:id="@+id/dingdan_title_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textColor="#7B7B7C"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_9"
                android:text="1"
                />


        </LinearLayout>


        <View
            android:id="@+id/line"
            android:layout_below="@id/dingdan_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E9EDF5"
            />

        <ImageView
            android:id="@+id/yituidan"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_alignParentRight="true"
            android:src="@mipmap/yituidan"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_below="@+id/line"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_creater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_below="@id/dingdan_title"
                    android:textColor="@color/colortext"
                    android:text="创建人: "
                    />

                <TextView
                    android:id="@+id/dingdan_creater_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_below="@id/dingdan_title"
                    android:textColor="@color/colortext"
                    android:text="商户"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_below="@id/dingdan_creater"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="总金额: "
                    />

                <TextView
                    android:id="@+id/dingdan_total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/dingdan_creater"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="10.00元"
                    />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_below="@id/dingdan_total"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="应     收: "
                    />

                <TextView
                    android:id="@+id/dingdan_get_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/dingdan_total"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="50.00元"
                    />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_dingjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_alignBaseline="@id/dingdan_creater"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="订          金: "
                    />

                <TextView
                    android:id="@+id/dingdan_dingjin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_alignBaseline="@id/dingdan_creater"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_46"
                    />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/dingdan_dingjin"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="订金抵扣: "
                    />

                <TextView
                    android:id="@+id/dingdan_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/dingdan_dingjin"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="0.00元"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dingdan_shouldget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_below="@id/dingdan_money"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:text="实          收: "
                    />

                <TextView
                    android:id="@+id/dingdan_shouldget_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colortext"
                    android:layout_below="@id/dingdan_money"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:text="10.00元"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
