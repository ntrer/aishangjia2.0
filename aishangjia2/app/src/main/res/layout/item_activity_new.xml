<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_w"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dingjin_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="#333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="活动名称: "
            />

        <TextView
            android:id="@+id/activity_name_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="#333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="测试"
            />


    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/dingjin_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#E9EDF5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/line"
        android:id="@+id/dingjin_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:id="@+id/activity_address"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:textSize="@dimen/sp_12"-->
                <!--android:layout_marginBottom="3dp"-->
                <!--android:textColor="#999"-->
                <!--android:text="活动地址："-->
                <!--/>-->

            <!--<TextView-->
                <!--android:id="@+id/activity_address_text"-->
                <!--android:layout_width="@dimen/dp_150"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/sp_12"-->
                <!--android:layout_marginBottom="3dp"-->
                <!--android:layout_toRightOf="@id/activity_address"-->
                <!--android:textColor="#999"-->
                <!--android:text=""-->
                <!--/>-->

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"

                android:textColor="#999"
                android:text="开始时间："
                />

            <TextView
                android:id="@+id/start_time_text"
                android:layout_width="@dimen/dp_150"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"

                android:layout_toRightOf="@id/start_time"
                android:textColor="#999"
                android:text=""
                />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/start_time"
                android:textColor="#999"
                android:text="结束时间："
                />

            <TextView
                android:id="@+id/end_time_text"
                android:layout_width="@dimen/dp_150"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/start_time_text"
                android:layout_toRightOf="@id/start_time"
                android:textColor="#999"
                android:text=""
                />


        </RelativeLayout>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#E9EDF5"
        android:layout_below="@+id/dingjin_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />
</RelativeLayout>