<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_w"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/activity_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shouka_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="售卡时间: "
            />

        <TextView
            android:id="@+id/goutong_time_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2018-10-30  17：00：00"
            />


        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@mipmap/right_arrow"
            />


    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#E9EDF5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/line"
        android:id="@+id/dingjin_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/kehu_pic3"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_toRightOf="@+id/activity_pic"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorPrimary"
                android:text="8123456789"
                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/activity_card_num"
                android:textColor="#999"
                android:text="手机号："
                />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/activity_card_num"
                android:layout_toRightOf="@id/phone"
                android:textColor="#999"
                android:text="18637280068"
                />


            <TextView
                android:id="@+id/shanghu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/phone"
                android:textColor="#999"
                />


            <TextView
                android:id="@+id/merchat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_3"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/activity_card_num"
                android:layout_marginBottom="3dp"
                android:textColor="@color/md_black_1000"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/shanghu_name"
                android:src="@mipmap/weiduihuan"
                android:id="@+id/weidui"
                android:visibility="gone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/shanghu_name"
                android:src="@mipmap/duid"
                android:id="@+id/yidui"
                android:visibility="gone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/shanghu_name"
                android:layout_marginRight="@dimen/dp_25"
                android:id="@+id/weiqian"
                android:src="@mipmap/weiqian"
                android:visibility="gone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/shanghu_name"
                android:id="@+id/yiqian"
                android:layout_marginRight="@dimen/dp_25"
                android:src="@mipmap/singed"
                android:visibility="gone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>



        </RelativeLayout>
    </RelativeLayout>



    <View
        android:id="@+id/line2"
       android:layout_below="@+id/dingjin_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#E9EDF5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />
</RelativeLayout>