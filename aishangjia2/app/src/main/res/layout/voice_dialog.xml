<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_40"
              android:layout_marginRight="@dimen/dp_40"
              android:background="@drawable/line_border7"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ext_dialog_title2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="您可以这样说"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#d6d6d6" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tishiyu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        >
    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_border3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ext_dialog_btn2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_border4"
            android:text="取消"
            android:textColor="#999"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#d6d6d6" />

            <Button
                android:id="@+id/sure2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_border5"
                android:textColor="#fff"
                android:text="开始说话"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>