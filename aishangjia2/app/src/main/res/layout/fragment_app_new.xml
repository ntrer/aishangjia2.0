<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:a_zhon="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:background="#E9EDF5"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_color"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="应用"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/fragment_app_bg"
        android:layout_below="@id/toolbar"
        android:background="@mipmap/fragment_app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_136">

        <ImageView
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@mipmap/fragment_app_company"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_w"
            />

        <TextView
            android:id="@+id/merchant_name"
            android:layout_marginTop="@dimen/dp_66"
            android:layout_marginLeft="@dimen/dp_96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/color_w"
            />


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/first_line"
        android:layout_below="@+id/fragment_app_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">

        <LinearLayout
            android:background="@drawable/border3"
            android:id="@+id/fragment_app_lianmeng_kehu"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_lianmeng_kehu"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="联盟客户"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border3"
            android:id="@+id/fragment_app_lianmeng_jizhang"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:background="@mipmap/fragment_app_liangmeng_jizhang"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="联盟记账"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border3"
            android:gravity="center_horizontal"
            android:id="@+id/fragment_app_lianmeng_caiwu"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_lianmeng_caiwu"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="联盟财务"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>



        <LinearLayout
            android:background="@drawable/border3"
            android:gravity="center_horizontal"
            android:id="@+id/fragment_app_lianmeng_gonggao"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_lianmeng_gonggao"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="公告"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/second_line"
        android:layout_below="@+id/first_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">

        <LinearLayout
            android:background="@drawable/border3"
            android:id="@+id/fragment_app_caozuo_liucheng"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_caozuo_liucheng"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="设置"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border3"
            android:id="@+id/fragment_app_reset_pwd"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:background="@mipmap/fragment_app_reset_pwd"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="修改密码"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border3"
            android:gravity="center_horizontal"
            android:id="@+id/fragment_app_sign"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_sign"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="陌拜签到"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border3"
            android:gravity="center_horizontal"
            android:id="@+id/fragment_app_quit"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/album_dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/fragment_app_quit"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="退出登录"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>


